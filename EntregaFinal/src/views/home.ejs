<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Entrega Final Carabetta-22460</title>
    <link rel="stylesheet" type="text/css" href="/style.css" />
    <script src="/socket.io/socket.io.js"></script>
    <script src="/scripts.js"></script>
  </head>
  <body>
    <div class="header">
      <h1>Bienvenido <%=usuario%>!</h1> 
      <button onclick="logOut()">Log Out</button> 
    </div>
    <div class="forms">
        <form class="form_izq"  id="prods" method="POST" action="/api/productos" onsubmit="levantarProductos()">
        <h3>Ingrese los productos</h3>
        <label for="title">Nombre del producto</label>
        <input type="text" id="title" name="title" />
        <label for="price">Precio</label>
        <input type="text" id="price" name="price" />
        <label for="description">Descripción</label>
        <input type="text" id="description" name="description" />
        <label for="image">Imágen</label>
        <input type="text" id="image" name="image" />
        <label for="stock">Stock</label>
        <input type="text" id="stock" name="stock" />        
        <input type="submit" value="Agregar Producto" />
      </form>
      <div id="verProductos">
        <button onclick="verProductos()">Ver Productos</button>          
      </div>
    </div>
    <h1>Chateá con un asesor</h1>
    <div class="chat">     
        <form id="mensajes" onsubmit="return addMessage(this)">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" placeholder="pepe@argento.com" required />
          <label for="nombre">Nombre</label>
          <input type="text" id="nombre" name="nombre" required />
          <label for="apellido">Apellido</label>
          <input type="text" id="apellido" name="apellido"  required />          
          <label for="texto">Mensaje</label>
          <input type="text" id="mensaje" name="mensaje" placeholder="Mensajes aquí" />
          <button type="submit">Enviar</button>
        </form>
        <div id="mensajesView">
          Mensajes
        </div>
    </div>
  </body>
</html>